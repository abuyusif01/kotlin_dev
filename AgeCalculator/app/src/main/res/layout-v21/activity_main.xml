<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/four"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="CALCULATE YOUR AGE "
        android:textColor="@color/zero"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="5dp"
        tools:ignore="HardcodedText" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="IN MINUTES"
        android:textColor="@color/zero"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="5dp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/zero"
            tools:ignore="NestedWeights,HardcodedText" />

        <TextView
            android:id="@+id/tv_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:gravity="center"
            android:textColor="@color/zero"
            android:textStyle="bold"
            tools:ignore="HardcodedText,Suspicious0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/zero"
            tools:ignore="NestedWeights,HardcodedText" />

        <TextView
            android:id="@+id/tv_four"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:gravity="center"
            android:textColor="@color/zero"
            android:textStyle="bold"
            tools:ignore="HardcodedText,Suspicious0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_five"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/zero"
            tools:ignore="NestedWeights,HardcodedText" />

        <TextView
            android:id="@+id/tv_six"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:gravity="center"
            android:textColor="@color/zero"
            android:textStyle="bold"
            tools:ignore="HardcodedText,Suspicious0dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnReset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/reset"
            android:layout_marginHorizontal="4dp"
            android:backgroundTint="#bf616a"
            android:onClick="clickedReset"
            android:textColor="@color/seven"
            />

        <Button
            android:id="@+id/btnSelectDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickedSelectDate"
            android:text="@string/select_date"
            android:backgroundTint="@color/eight"
            android:textColor="@color/seven"
            android:layout_marginEnd="3dp"
            />
    </LinearLayout>
</LinearLayout>